# ====================================
# Homelab Stack Environment Variables
# ====================================

# System Configuration
TIMEZONE=Europe/Warsaw
COMPOSE_PROJECT_NAME=homelab

# PostgreSQL Database
POSTGRES_DB=n8n
POSTGRES_USER=n8n
POSTGRES_PASSWORD=your_secure_postgres_password_here

# n8n Configuration
N8N_USER=admin
N8N_PASSWORD=your_secure_n8n_password_here
N8N_HOST=localhost  # Auto-detects Tailscale or uses localhost
N8N_PORT=5678
N8N_ENCRYPTION_KEY=your_32_character_encryption_key_here
N8N_LOG_LEVEL=info

# Ollama Configuration
OLLAMA_PORT=11434
OLLAMA_MODELS=llama3.1:8b,qwen2.5:7b,qwen2.5:14b,codellama:13b

# API Keys and Tokens
# ==================

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Notion API
NOTION_API_TOKEN=your_notion_integration_token_here
NOTION_DATABASE_ID=your_notion_database_id_here

# Gmail API (OAuth2)
GMAIL_CLIENT_ID=your_gmail_client_id_here
GMAIL_CLIENT_SECRET=your_gmail_client_secret_here
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token_here

# OpenAI API (Fallback)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Tailscale (Optional)
TAILSCALE_AUTH_KEY=your_tailscale_auth_key_here
TAILSCALE_HOSTNAME=homelab

# Watchtower (Optional)
WATCHTOWER_SCHEDULE=0 0 4 * * *

# Monitoring Stack (Optional)
ENABLE_MONITORING=false
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin
THERMAL_EXPORTER_PORT=9200
N8N_WEBHOOK_URL=http://n8n:5678/webhook/thermal-alert

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=./backups

# Security Settings
# ================
# Generate secure passwords and keys before deployment
# Use: openssl rand -base64 32
# Or: python -c "import secrets; print(secrets.token_urlsafe(32))"